<div class="max-w-2xl mx-auto py-20">
  <h1 class="text-4xl font-bold mb-10 border-b pb-4">Operator Menu</h1>

  <div class="space-y-6">
    <%= link_to new_campaign_path, class: "block group" do %>
      <div class="border-l-4 border-black pl-4 py-2 hover:bg-gray-50">
        <div class="text-2xl font-bold group-hover:underline">Start New Doctrine</div>
        <div class="text-gray-500">Select an archetype and begin a new simulation.</div>
      </div>
    <% end %>

    <% if @campaigns.any? %>
      <div class="mt-8">
        <h2 class="text-sm font-bold uppercase tracking-widest text-gray-400 mb-4">Saved States</h2>
        <% @campaigns.each do |campaign| %>
          <%= link_to campaign_path(campaign), class: "block group mb-4" do %>
            <div class="border-l-4 border-gray-300 pl-4 py-2 hover:border-black hover:bg-gray-50 transition">
              <div class="text-xl font-bold"><%= campaign.title %></div>
              <div class="text-sm text-gray-500">
                Week <%= campaign.current_week %> &bull; Last active: <%= time_ago_in_words(campaign.updated_at) %> ago
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <div class="pt-10">
      <%= button_to "Terminate Session", session_path, method: :delete, class: "text-red-600 font-bold hover:underline bg-transparent border-0 cursor-pointer p-0" %>
    </div>
  </div>
</div>